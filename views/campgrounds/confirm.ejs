<% include ../partials/header%>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Booking Confirmed!!</h1>
        <hr>
          <div style="width: 75% ;margin:25px auto;">
            <div style= " text-align: center;">
                <div class="panel-group">
                    <div class="panel panel-primary">
                      <div class="panel-body">
                          <h3>Booking ID:<span style="color:brown"><%=booked.booking_id%></span></h3>
                          <hr>
                          <h4 style="display:inline-block;width: 45%;">FROM:<span style="color: brown"><%=booked.from%></span></h4>
                          <h4 style="display:inline-block;width: 45%;">TO:<span style="color: brown"><%=booked.to%></span></h4>
                          <!-- format the date -->
                        </div>
                    </div>

                    <div class="panel panel-default">
                      <div class="panel-body">
                        <h4 style="display:inline-block;width: 45%;">Admits:<span style="color: brown"><%=booked.admits%></span></h4>
                        <h4 style="display:inline-block;width: 45%;">Total Amount: Rs<span style="color: brown"><%=booked.amount%></span></h4>    
                      </div>
                      <div class="panel panel-default">
                            <div class="panel-body">
                              <h4 style="display:inline-block;width: 45%;">Campname: <span style="color: brown"><%=campground[0].CAMPNAME%></span></h4>
                              <h4 style="display:inline-block;width: 45%;">Location: <span style="color: brown"><%=campground[0].LOCATION%></span></h4>
                            </div>
                    </div>
                  </div>
                
            </div>
            
           <a href="/campgrounds">Go back</a>
          </div>
       
    </div>
</div>

<% include ../partials/footer%>