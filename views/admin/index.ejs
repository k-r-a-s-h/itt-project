<% include ../partials/header1%>
<div class="container">
    <header class="jumbotron" style="text-align: center;">
        <div class ="container">
            <h1 style="text-shadow: 2px 2px 4px #888;">Welcome To MAHECamp!</h1>
            <p style="color: black  ;text-shadow: 2px 2px 2px #888;">View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a>
                <a class="btn btn-info btn-lg" href="/about">About</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex;flex-wrap:wrap;">
        <%campgrounds.forEach(function(campground){%>
        <div class="col-md-3 col-sm-6" >
            <div class="thumbnail">
                <img src="<%=campground.IMGURL%>">
                <div class="caption">
                    <h4><%=campground.CAMPNAME %></h4>
                </div>
                <p>
                    <a href="/admin/campgrounds/<%=campground.ID%>" class="btn btn-primary">More Info</a>
                </p>
            </div>

        </div>
        <% }); %>
    </div>

</div>
<% include ../partials/footer%>