<% include ./partials/header%>

<div class="container">
    <div class="row">
         <h1 style="text-align:center;">SignUp</h1>
         <div style="width:30%;margin:25px auto;">
             <form method="POST" action="/register">
                 <div class="form-group"><input class="form-control" type="text" name="name" placeholder="name" required></div>
                 <div class="form-group"><input class="form-control" type="password" name="password" placeholder="password" required ></div>
                 <div class="form-group"><input class="form-control" type="email" name="email" placeholder="email" required></div>
                 <div class="form-group"><input class="form-control" type="text" name="city" placeholder="city" required></div>
                 <div class="form-group"><input class="form-control" type="text" name="district" placeholder="district" required></div>
                 <div class="form-group"><input class="form-control" type="number" name="mobile_number" placeholder="mobile number" required></div>
                 <div class="form-group"><input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit"></div>
                 
                 <!--<input type="submit" value="Login!">-->
             </form>
         </div>
    </div>
</div>

<% include ./partials/footer%>